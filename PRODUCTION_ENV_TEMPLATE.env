# Lucky Gas Production Environment Variables Template
# Copy this to .env and update all values marked with <UPDATE>

# === CRITICAL: UPDATE ALL <UPDATE> VALUES BEFORE PRODUCTION ===

# Database Configuration
POSTGRES_USER=luckygas_prod
POSTGRES_PASSWORD=<UPDATE-SECURE-PASSWORD-MIN-32-CHARS>
POSTGRES_DB=luckygas_production
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PASSWORD=<UPDATE-SECURE-PASSWORD-MIN-32-CHARS>
REDIS_PORT=6379

# Backend Configuration
SECRET_KEY=<UPDATE-GENERATE-SECURE-KEY-MIN-32-CHARS>
BACKEND_PORT=8000
ENVIRONMENT=production

# CORS Origins (Update with your actual domains)
BACKEND_CORS_ORIGINS=["https://luckygas.com.tw","https://www.luckygas.com.tw","https://app.luckygas.com.tw"]

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=<UPDATE-YOUR-GCP-PROJECT-ID>
GOOGLE_APPLICATION_CREDENTIALS=/app/credentials/prod-service-account.json
HOST_GOOGLE_CREDENTIALS=./backend/credentials/prod-service-account.json
GOOGLE_MAPS_API_KEY=<UPDATE-YOUR-MAPS-API-KEY>
VERTEX_AI_LOCATION=asia-east1
VERTEX_AI_MODEL_NAME=<UPDATE-IF-USING-CUSTOM-MODEL>

# Frontend Configuration
FRONTEND_PORT=443
VITE_API_URL=https://api.luckygas.com.tw
VITE_WS_URL=wss://api.luckygas.com.tw

# JWT Settings
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Email Configuration
SMTP_HOST=<UPDATE-YOUR-SMTP-HOST>
SMTP_PORT=587
SMTP_USER=<UPDATE-YOUR-EMAIL>
SMTP_PASSWORD=<UPDATE-YOUR-EMAIL-PASSWORD>
EMAIL_FROM_NAME=Lucky Gas System
EMAIL_FROM_ADDRESS=noreply@luckygas.com.tw

# Monitoring (Optional but Recommended)
SENTRY_DSN=<UPDATE-YOUR-SENTRY-DSN>
NEW_RELIC_LICENSE_KEY=<UPDATE-IF-USING-NEW-RELIC>

# File Upload Settings
MAX_UPLOAD_SIZE_MB=10
ALLOWED_IMAGE_TYPES=["image/jpeg","image/png","image/webp"]

# Rate Limiting (IMPORTANT for Production)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Logging
LOG_LEVEL=WARNING
LOG_FORMAT=json

# Timezone
TZ=Asia/Taipei

# === SECURITY CHECKLIST ===
# [ ] Generated new SECRET_KEY (use: openssl rand -base64 32)
# [ ] Set strong POSTGRES_PASSWORD
# [ ] Set strong REDIS_PASSWORD  
# [ ] Updated GOOGLE_CLOUD_PROJECT
# [ ] Added production CORS origins
# [ ] Configured email settings
# [ ] Enabled rate limiting
# [ ] Set LOG_LEVEL to WARNING or ERROR
# [ ] Reviewed all <UPDATE> placeholders