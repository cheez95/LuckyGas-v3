# Lucky Gas Backend Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control!

# Environment
ENVIRONMENT=test
PROJECT_NAME=LuckyGas Test

# Security - CRITICAL: Generate a strong key!
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=test-secret-key-min-32-chars-required-for-testing

# Database
POSTGRES_SERVER=localhost
POSTGRES_USER=luckygas
POSTGRES_PASSWORD=your-secure-database-password-here
POSTGRES_DB=luckygas_test
POSTGRES_PORT=5433

# Or use a complete DATABASE_URL instead
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5433/dbname

# Redis
REDIS_URL=redis://localhost:6380/1
# For Redis with password:
# REDIS_URL=redis://:your-redis-password@localhost:6380/1

# Admin User - Change on first login!
FIRST_SUPERUSER=admin@luckygas.tw
FIRST_SUPERUSER_PASSWORD=change-this-strong-password-min-8-chars

# Google Cloud Platform Configuration
# After running gcp-setup-execute.sh, update these values:

# Project Configuration
GCP_PROJECT_ID=your-gcp-project-id
GCP_REGION=asia-east1
GCP_LOCATION=asia-east1

# Service Account Key Path
# Generated by setup script at: ~/.gcp/lucky-gas/lucky-gas-prod-key.json
GOOGLE_APPLICATION_CREDENTIALS=/path/to/lucky-gas-prod-key.json

# Storage Configuration
GCS_BUCKET=lucky-gas-storage
GCS_BUCKET_NAME=lucky-gas-storage
GCS_MEDIA_PREFIX=delivery-photos

# Google Maps API Key
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_MAPS_API_KEY=
# Format: AIzaXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Vertex AI Configuration (optional - for custom models)
VERTEX_MODEL_ID=
VERTEX_ENDPOINT_ID=

# Secret Manager (optional - for production)
# Store sensitive data in Secret Manager instead of env vars
# SECRET_MANAGER_PROJECT=your-gcp-project-id

# CORS Origins (comma-separated or JSON array)
# For development
BACKEND_CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:3001
# For production
# BACKEND_CORS_ORIGINS=["https://app.luckygas.tw","https://www.luckygas.tw"]

# Cost Monitoring
DAILY_COST_WARNING=50.00
DAILY_COST_CRITICAL=100.00

# Rate Limiting
ROUTES_RATE_LIMIT_PER_SECOND=10
VERTEX_RATE_LIMIT_PER_SECOND=5

# Development Mode (auto/production/development/offline)
DEVELOPMENT_MODE=auto

# Logging
LOG_LEVEL=INFO

# Optional: Sentry Error Tracking
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Optional: File Upload Limits
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
REQUEST_TIMEOUT=60  # seconds

# Optional: API Versioning
API_V1_PREFIX=/api/v1

# Taiwan-specific Settings
TIMEZONE=Asia/Taipei
DEFAULT_LOCALE=zh-TW

# SMS Configuration
SMS_PROVIDER_URL=http://localhost:8001/mock-sms
SMS_PROVIDER_USERNAME=test
SMS_PROVIDER_PASSWORD=test

# E-Invoice Configuration  
EINVOICE_URL=http://localhost:8002/mock-einvoice
EINVOICE_USERNAME=test
EINVOICE_PASSWORD=test

# Banking
BANKING_API_URL=http://localhost:8003/mock-banking

# File Storage
UPLOAD_DIR=./uploads/test