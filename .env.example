# Lucky Gas Delivery System Environment Variables
# Copy this file to .env and update with your actual values

# Database Configuration
POSTGRES_USER=luckygas
POSTGRES_PASSWORD=luckygas123
POSTGRES_DB=luckygas
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PASSWORD=
REDIS_PORT=6379

# Backend Configuration
SECRET_KEY=your-secret-key-here-please-change-this
BACKEND_PORT=8000
ENVIRONMENT=production

# CORS Origins (JSON array format)
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:80","http://localhost"]

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
GOOGLE_APPLICATION_CREDENTIALS=/app/credentials.json
HOST_GOOGLE_CREDENTIALS=./backend/credentials.json
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
VERTEX_AI_LOCATION=us-central1
VERTEX_AI_MODEL_NAME=your-model-name

# Frontend Configuration
FRONTEND_PORT=80
VITE_API_URL=http://backend:8000
VITE_WS_URL=ws://backend:8000

# Admin Tools (optional)
ADMINER_PORT=8080
PGADMIN_PORT=5050
PGADMIN_EMAIL=admin@luckygas.com
PGADMIN_PASSWORD=admin123
REDIS_COMMANDER_PORT=8081

# JWT Settings
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM_NAME=Lucky Gas System
EMAIL_FROM_ADDRESS=noreply@luckygas.com

# Monitoring (optional)
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=

# File Upload Settings
MAX_UPLOAD_SIZE_MB=10
ALLOWED_IMAGE_TYPES=["image/jpeg","image/png","image/webp"]

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Timezone
TZ=Asia/Taipei